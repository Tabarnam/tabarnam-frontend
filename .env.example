# ──────────────────────────────────────────────
# Tabarnam Environment Variables
# Copy to .env and fill in your values
# ──────────────────────────────────────────────

# ── Cosmos DB (required) ─────────────────────
COSMOS_DB_ENDPOINT=https://your-account.documents.azure.com:443/
COSMOS_DB_KEY=your-cosmos-key
COSMOS_DB_DATABASE=tabarnam-db
COSMOS_DB_COMPANIES_CONTAINER=companies

# ── Azure Storage (required for logos/blobs) ─
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key

# ── xAI Enrichment (required for enrichment) ─
XAI_EXTERNAL_BASE=https://your-xai-endpoint/api
XAI_API_KEY=your-xai-api-key

# ── Frontend (Vite build-time) ───────────────
# Leave empty for relative /api/ paths (default for SWA)
VITE_API_BASE=
VITE_XAI_FUNCTIONS_BASE=

# ── Azure Infrastructure ─────────────────────
AZURE_SUBSCRIPTION_ID=
AZURE_TENANT_ID=

# ── Queue / Worker (optional) ────────────────
# Only needed if running the dedicated enrichment worker
ENRICHMENT_QUEUE_CONNECTION_STRING=
ENRICHMENT_QUEUE_NAME=import-resume-worker

# ── Google APIs (optional, for geocoding) ─────
GOOGLE_MAPS_KEY=

# ── Internal Auth (optional) ─────────────────
X_INTERNAL_JOB_SECRET=
DEBUG_KEY=

# ── Import Tuning (optional, all in ms) ──────
# IMPORT_LOCK_TTL_MS=30000
# IMPORT_PRIMARY_HARD_TIMEOUT_MS=300000
# IMPORT_HEARTBEAT_STALE_MS=60000
# XAI_REQUEST_TIMEOUT_MS=30000
