{
  "$schema": "https://www.azurestaticapps.net/staticwebapp.config.schema.json",
  "routes": [
    {
      "route": "/xapi/ping",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://tabarnam-xai-externalapi.azurewebsites.net/api/ping"
    },
    {
      "route": "/xapi/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "https://tabarnam-xai-externalapi.azurewebsites.net/api/{*path}"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/xapi/*", "/assets/*"]
  },
  "responseOverrides": {
    "404": { "rewrite": "/index.html", "statusCode": 200 }
  }
}
