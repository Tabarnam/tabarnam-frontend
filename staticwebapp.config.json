{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated", "anonymous"],
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    {
      "route": "/xapi",
      "redirect": "/xapi/",
      "statusCode": 301
    },
    {
      "route": "/xapi/*",
      "allowedRoles": ["anonymous"],
      "rewrite": "/api/{*path}"
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/xapi/*",
      "/assets/*",
      "/favicon.ico",
      "/robots.txt",
      "/sitemap.xml"
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "404": {
      "rewrite": "/404.html"
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' https://tabarnam.com"
  },
  "platform": {
    "apiRuntime": "node:20"
  }
}