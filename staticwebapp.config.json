{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/xapi/*",
      "/assets/*",
      "/geo/*",
      "/logos/*",
      "/*.png",
      "/*.svg",
      "/*.ico",
      "/*.woff*",
      "/*.ttf",
      "/*.eot",
      "/favicon.ico",
      "/robots.txt",
      "/sitemap.xml",
      "/llms.txt"
    ]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html"
    }
  },
  "routes": [
    {
      "route": "/assets/*.js",
      "serve": "/assets/*.js",
      "statusCode": 200
    },
    {
      "route": "/assets/*.css",
      "serve": "/assets/*.css",
      "statusCode": 200
    },
    {
      "route": "/assets/*.wasm",
      "serve": "/assets/*.wasm",
      "statusCode": 200
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated", "anonymous"],
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    },
    { "route": "/xapi",  "redirect": "/xapi/", "statusCode": 308 },
    { "route": "/xapi/*", "allowedRoles": [ "anonymous" ], "rewrite": "/api/{*path}" }
  ],
  "mimeTypes": {
    ".js": "application/javascript",
    ".mjs": "application/javascript",
    ".css": "text/css",
    ".wasm": "application/wasm",
    ".json": "application/json",
    ".svg": "image/svg+xml",
    ".png": "image/png",
    ".woff": "font/woff",
    ".woff2": "font/woff2",
    ".ttf": "font/ttf",
    ".eot": "application/vnd.ms-fontobject"
  },
  "globalHeaders": {
    "/*": {
      "x-content-type-options": "nosniff",
      "x-frame-options": "DENY",
      "x-xss-protection": "1; mode=block"
    },
    "/api/*": { "Content-Type": "application/json" },
    "/xapi/*": { "x-swa-xapi": "yes" }
  },
  "platform": {
    "apiRuntime": "node:20"
  }
}
